{
  "builders": [
    {
      "boot_command": [
        "echo http://{{ .HTTPIP }}:{{ .HTTPPort}} > .packer_http<enter>",
        "mkdir -m 0700 .ssh<enter>",
        "curl $(cat .packer_http)/install_rsa.pub > .ssh/authorized_keys<enter>",
        "sudo systemctl start sshd<enter>"
      ],
      "boot_wait": "45s",
      "disk_size": "{{ user `disk_size` }}",
      "format": "ova",
      "guest_additions_mode": "disable",
      "guest_os_type": "Linux",
      "headless": true,
      "http_directory": "scripts",
      "iso_checksum": "f8998e59a186323d362a0f65da1d9b5921d4f9c4308f3e6199f469ebf3067e26",
      "iso_checksum_type": "sha256",
      "iso_url": "https://channels.nixos.org/nixos-20.09/latest-nixos-minimal-i686-linux.iso",
      "shutdown_command": "sudo shutdown -h now",
      "ssh_port": 22,
      "ssh_private_key_file": "./scripts/install_rsa",
      "ssh_username": "nixos",
      "type": "virtualbox-iso",
      "vboxmanage": [
        [
          "modifyvm",
          "{{.Name}}",
          "--memory",
          "{{ user `memory` }}",
          "--vram",
          "128",
          "--clipboard",
          "bidirectional"
        ]
      ]
    },
    {
      "boot_command": [
        "echo http://{{ .HTTPIP }}:{{ .HTTPPort}} > .packer_http<enter>",
        "mkdir -m 0700 .ssh<enter>",
        "curl $(cat .packer_http)/install_rsa.pub > .ssh/authorized_keys<enter>",
        "sudo systemctl start sshd<enter>"
      ],
      "boot_wait": "45s",
      "disk_interface": "virtio-scsi",
      "disk_size": "{{ user `disk_size` }}",
      "format": "qcow2",
      "headless": true,
      "http_directory": "scripts",
      "iso_checksum": "f8998e59a186323d362a0f65da1d9b5921d4f9c4308f3e6199f469ebf3067e26",
      "iso_checksum_type": "sha256",
      "iso_url": "https://channels.nixos.org/nixos-20.09/latest-nixos-minimal-i686-linux.iso",
      "qemuargs": [
        [
          "-m",
          "{{ user `memory` }}"
        ]
      ],
      "shutdown_command": "sudo shutdown -h now",
      "ssh_port": 22,
      "ssh_private_key_file": "./scripts/install_rsa",
      "ssh_username": "nixos",
      "type": "qemu"
    },
    {
      "boot_command": [
        "echo http://{{ .HTTPIP }}:{{ .HTTPPort}} > .packer_http<enter>",
        "mkdir -m 0700 .ssh<enter>",
        "curl $(cat .packer_http)/install_rsa.pub > .ssh/authorized_keys<enter>",
        "sudo su --<enter>",
        "nix-env -iA nixos.linuxPackages.hyperv-daemons<enter><wait10>",
        "$(find /nix/store -executable -iname 'hv_kvp_daemon' | head -n 1)<enter><wait10>",
        "systemctl start sshd<enter>"
      ],
      "boot_wait": "60s",
      "communicator": "ssh",
      "differencing_disk": true,
      "disk_size": "{{ user `disk_size` }}",
      "enable_secure_boot": false,
      "generation": 1,
      "headless": true,
      "http_directory": "scripts",
      "iso_checksum": "f8998e59a186323d362a0f65da1d9b5921d4f9c4308f3e6199f469ebf3067e26",
      "iso_checksum_type": "sha256",
      "iso_url": "https://channels.nixos.org/nixos-20.09/latest-nixos-minimal-i686-linux.iso",
      "memory": "{{ user `memory` }}",
      "shutdown_command": "sudo shutdown -h now",
      "ssh_port": 22,
      "ssh_private_key_file": "./scripts/install_rsa",
      "ssh_timeout": "1h",
      "ssh_username": "nixos",
      "switch_name": "Default Switch",
      "type": "hyperv-iso"
    },
    {
      "boot_command": [
        "echo http://{{ .HTTPIP }}:{{ .HTTPPort}} > .packer_http<enter>",
        "mkdir -m 0700 .ssh<enter>",
        "curl $(cat .packer_http)/install_rsa.pub > .ssh/authorized_keys<enter>",
        "sudo systemctl start sshd<enter>"
      ],
      "boot_wait": "45s",
      "disk_size": "{{ user `disk_size` }}",
      "guest_os_type": "Linux",
      "headless": true,
      "http_directory": "scripts",
      "iso_checksum": "f8998e59a186323d362a0f65da1d9b5921d4f9c4308f3e6199f469ebf3067e26",
      "iso_checksum_type": "sha256",
      "iso_url": "https://channels.nixos.org/nixos-20.09/latest-nixos-minimal-i686-linux.iso",
      "memory": "{{ user `memory` }}",
      "shutdown_command": "sudo shutdown -h now",
      "ssh_port": 22,
      "ssh_private_key_file": "./scripts/install_rsa",
      "ssh_username": "nixos",
      "type": "vmware-iso"
    }
  ],
  "post-processors": [
    [
      {
        "keep_input_artifact": false,
        "only": [
          "virtualbox-iso",
          "qemu",
          "hyperv-iso"
        ],
        "output": "nixos-20.09-{{.Provider}}-i686.box",
        "type": "vagrant"
      }
    ]
  ],
  "provisioners": [
    {
      "execute_command": "sudo su -c '{{ .Vars }} {{.Path}}'",
      "script": "./scripts/install.sh",
      "type": "shell"
    }
  ],
  "variables": {
    "disk_size": "10240",
    "memory": "1024"
  }
}
